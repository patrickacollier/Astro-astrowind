---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'AstroWind â€” Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
  tagline="Welcome to"
  title="Twin Oaks Fun Farm"
  subtitle="Experience the joy of outdoor adventures, animal encounters, and family fun in the heart of Middle Georgia."
  actions={[
    { variant: 'primary', text: 'Plan Your Visit', href: '#', icon: 'tabler:calendar' },
    { text: 'Our Attractions', href: '#features' },
  ]}
/>

  <Features
  id="features"
  title="Discover Our Attractions"
  subtitle="From petting zoos to sports facilities, there's something for everyone at Twin Oaks Fun Farm."
  items={[
    {
      title: 'Petting Zoo',
      description: 'Get up close with friendly farm animals in our interactive petting zoo.',
      icon: 'tabler:horse',
    },
    {
      title: 'Outdoor Playground',
      description: 'Let the kids run wild in our safe and exciting outdoor play areas.',
      icon: 'tabler:trees',
    },
    {
      title: 'Jumping Pillow',
      description: 'Bounce to your heart\'s content on our giant, air-filled jumping pillow.',
      icon: 'tabler:jump-rope',
    },
    {
      title: 'Baseball & Softball Training',
      description: 'Hone your skills at our state-of-the-art baseball and softball facilities.',
      icon: 'tabler:ball-baseball',
    },
    {
      title: 'Family Dining',
      description: 'Enjoy delicious meals and snacks at our family-friendly dining areas.',
      icon: 'tabler:cookie',
    },
    {
      title: 'Outdoor Games',
      description: 'Challenge friends and family to a variety of fun outdoor games.',
      icon: 'tabler:ball-football',
    },
  ]}
/>

  <Content
    isReversed
    title="Field of Dreams: Our New Baseball Facility"
    items={[
      {
        title: 'Professional-grade Fields',
        description: 'Experience playing on meticulously maintained, regulation-size baseball fields.',
      },
      {
        title: 'Training Equipment',
        description: 'Access state-of-the-art pitching machines, batting cages, and training tools.',
      },
      {
        title: 'Expert Coaching',
        description: 'Learn from experienced coaches to improve your game.',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1566577739112-5180d4bf9390?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2026&q=80',
      alt: 'Baseball Field',
    }}
  >
    <Fragment slot="content">
      Elevate your game at our brand new, state-of-the-art baseball facility.
    </Fragment>
  </Content>

  <Steps
    title="Plan Your Visit to Twin Oaks Fun Farm"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Choose Your Date</span>',
        description: 'Select a day for your visit. We\'re open year-round with seasonal events and attractions.',
        icon: 'tabler:calendar',
      },
      {
        title: 'Step 2: <span class="font-medium">Pick Your Activities</span>',
        description: 'Decide which attractions you\'d like to experience during your visit.',
        icon: 'tabler:list-check',
      },
      {
        title: 'Step 3: <span class="font-medium">Book Online</span>',
        description: 'Reserve your spot easily through our online booking system.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Enjoy Your Visit!',
        icon: 'tabler:mood-smile',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1594498653385-d5172c532c00?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=987&q=80',
      alt: 'Family at farm',
    }}
  />

  <FAQs
    title="Frequently Asked Questions"
    subtitle="Find answers to common questions about visiting Twin Oaks Fun Farm."
    tagline="FAQs"
    classes={{ container: 'max-w-6xl' }}
    items={[
      {
        title: 'What are your opening hours?',
        description: 'We are open daily from 9 AM to 6 PM, with extended hours during summer months and special events.',
      },
      {
        title: 'Do you offer birthday party packages?',
        description: 'Yes! We offer various birthday party packages that include exclusive use of certain areas and special treats for the birthday child.',
      },
      {
        title: 'Is outside food allowed?',
        description: 'While we have delicious dining options on-site, you\'re welcome to bring your own picnic to enjoy in designated areas.',
      },
      {
        title: 'Are pets allowed?',
        description: 'For the safety of our farm animals, personal pets are not allowed. Service animals are always welcome.',
      },
    ]}
  />

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Book Your Visit',
        href: '#',
        icon: 'tabler:ticket',
      },
    ]}
  >
    <Fragment slot="title">
      Ready for a Day of Fun?
    </Fragment>
    <Fragment slot="subtitle">
      Book your visit to Twin Oaks Fun Farm today and create lasting memories with your family!
    </Fragment>
  </CallToAction>
</Layout>